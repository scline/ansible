version: '3'

services:
  netdata:
    image: titpetric/netdata
#   init: true
    restart: always
    user: root
    pid: "host"
    network_mode: "host"
    privileged: true
#   ports:
#     - 80:80
    cap_add:
      - SYS_PTRACE
    volumes:
      - /sys:/host/sys:ro
      - /proc:/host/proc:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
    environment:
      TZ: {{ server_timezone }}
      UID: 0
