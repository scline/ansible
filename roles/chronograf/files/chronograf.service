# /etc/systemd/system/chronograf.service
[Unit]
Description=chronograf Service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
StandardError=null
StandardOutput=null
WorkingDirectory=/etc/docker/compose/chronograf
ExecStartPre=/usr/bin/docker-compose -f /etc/docker/compose/chronograf/docker-compose.yml pull
ExecStart=/usr/bin/docker-compose -f /etc/docker/compose/chronograf/docker-compose.yml up -d --force-recreate
ExecStop=/usr/bin/docker-compose -f /etc/docker/compose/chronograf/docker-compose.yml down

[Install]
WantedBy=multi-user.target
