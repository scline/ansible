version: '3'

services:
  netdata:
    image: newrelic/infrastructure:latest
    hostname: {{ ansible_hostname }}
    restart: always
    privileged: true
    cap_add:
      - SYS_PTRACE
    volumes:
      - /:/host:ro
      - /var/run/docker.sock:/var/run/docker.sock
    environment:
      TZ: {{ server_timezone }}
      NRIA_LICENSE_KEY: {{ NRIA_LICENSE_KEY }}
      NRIA_ENABLE_PROCESS_METRICS: 1
