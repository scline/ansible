version: '3'

volumes:
  data:

services:
  starbound:
    image: lacsap/starbound
    restart: always
    ports:
      - 21025:21025
    volumes:
      - data:/server/steamcmd/starbound 
    environment:
      TZ: {{ server_timezone }}
      STEAM_USERNAME: {{ STEAM_USERNAME }}
      STEAM_PASSWORD: {{ STEAM_PASSWORD }}

  dyndns:
    image: bshaw/route53-dyndns
    restart: always
    environment:
      AWS_ACCESS_KEY_ID: {{ AWS_ACCESS_KEY_ID }}
      AWS_SECRET_ACCESS_KEY: {{ AWS_SECRET_ACCESS_KEY }}
      AWS_CONNECTION_REGION: us-east-1
      ROUTE53_DOMAIN_A_RECORD: {{ STARBOUND_PUBLIC_FQDN }}
      ROUTE53_UPDATE_FREQUENCY: 10800

